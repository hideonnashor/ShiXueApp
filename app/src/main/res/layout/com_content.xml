<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal">
       <LinearLayout android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:layout_weight="8"
                     android:layout_margin="10dp"
       >
            <TextView android:id="@+id/comContentText"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"

                      android:textSize="20sp"
                      android:textColor="#FFFFFF"

                      android:text="demo"
                      android:layout_weight="3"
            />
           <TextView android:id="@+id/comContentDes"
                     android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:text="这是一段关于标题的描述这是一段关于标题的描述这是一段关于标题的描述这是一段关于标题的描述这是一段关于标题的描述"
                     android:layout_weight="1"
                     android:maxLines="3"
                     android:ellipsize="end"
           />

       </LinearLayout>
        <ImageView android:id="@+id/comContentImage"
                   android:layout_width="0dp"
                   android:layout_height="0dp"
                   android:layout_marginLeft="15dp"

                   android:src="@drawable/ic_launcher"
                   android:layout_weight="0"
        />
        <ImageView android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_margin="15dp"

                   android:src="@drawable/ic_launcher"
                   android:layout_weight="2"
        />
    </LinearLayout>
    <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/textView3"
            android:background="@color/viewpageTab"
    />

</android.support.constraint.ConstraintLayout>